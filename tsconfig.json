{
  "compilerOptions": {
    "rootDir": "src",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules",
    "config",
    "dist",
    "plugin",
    "public",
    "server"
  ]
}